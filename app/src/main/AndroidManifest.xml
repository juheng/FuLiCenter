<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.ucai.fulicenter">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".application.FuLiCenterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.activity.MainActivity" />
        <activity android:name=".controller.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.activity.BoutiqueChildActivity" />
        <activity android:name=".controller.activity.NewGoodsDetailActivity" />
        <activity android:name=".controller.activity.CategoryDetailActivity" />
        <activity android:name=".controller.activity.LoginActivity" />
        <activity android:name=".controller.activity.RegisterActivity" />
        <activity android:name=".controller.activity.SettingActivity" />
        <activity android:name=".controller.activity.PersonalDataActivity" />
        <activity android:name=".controller.activity.UpdateNickActivity" />
        <activity android:name=".controller.activity.CollectActivity" />
        <activity android:name=".controller.activity.OrderActivity"></activity>
    </application>

</manifest>