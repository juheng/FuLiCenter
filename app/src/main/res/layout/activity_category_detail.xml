<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/category_detail_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_orange"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_category_detail_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back" />
        <cn.ucai.fulicenter.view.CatFilterButton
            android:id="@+id/catButton_category"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="110dp"
            android:background="@color/main_orange"
            android:drawableRight="@drawable/arrow2_up"
            android:text="美妆"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/category_detail_menu2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/category_detail_menu"
        android:orientation="horizontal">

        <Button
            android:id="@+id/category_detail_addTime"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:drawableRight="@drawable/arrow_order_up"
            android:text="价格" />

        <Button
            android:id="@+id/category_detail_price"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:drawableRight="@drawable/arrow_order_down"
            android:text="上架时间" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/category_fragment_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/category_detail_menu2"></FrameLayout>
</RelativeLayout>
