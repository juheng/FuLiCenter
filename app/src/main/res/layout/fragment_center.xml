<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/center_relativeLayout_set"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/main_orange">
        <TextView
            android:id="@+id/tv_center_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:textSize="25sp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/iv_center_msg"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/tb_icon_more_msg_white_56"
            android:layout_alignParentRight="true"/>
<LinearLayout
    android:id="@+id/center_linearLayout_avatar"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_below="@id/tv_center_set"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_center_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/contactlogo"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_center_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你说"
        android:layout_gravity="center_vertical"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/tb_icon_home_qrcode_normal"
        android:layout_marginLeft="20dp"/>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/center_linearLayout_avatar"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@color/google_red">
            <LinearLayout
                android:id="@+id/getCollect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="收藏的宝贝"
                    android:gravity="center"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:rotation="90"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="28"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="收藏的店铺"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="58"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="我的足迹"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/button_center_viewBaby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="查看全部已购宝贝"
            android:textSize="16sp"
            android:drawableRight="@drawable/right_arrow_icon"
            android:layout_marginLeft="140dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/iv_payment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:src="@drawable/order_list1"
            />
        <ImageView
            android:id="@+id/iv_deliverGoods"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:src="@drawable/order_list2"
            />
        <ImageView
            android:id="@+id/iv_goodsReceipt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:src="@drawable/order_list3"
            />
        <ImageView
            android:id="@+id/iv_evaluate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:src="@drawable/order_list4"
            />
        <ImageView
            android:id="@+id/iv_service"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:src="@drawable/order_list5"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的卡券包"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="245dp"
            android:src="@drawable/right_arrow_icon"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/center_card_coupon1"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="生活卷"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="250dp"
            android:src="@drawable/right_arrow_icon"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="5dp">
        <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/center_card_coupon2"
        android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="网店卷"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:text="暂无可用优惠券"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="70dp"
            android:src="@drawable/right_arrow_icon"/></LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_marginTop="5dp">
    <ImageView
    android:layout_width="50dp"
    android:layout_height="40dp"
    android:layout_gravity="center_vertical"
    android:src="@drawable/center_card_coupon3"
    android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="会员卡"
        android:textSize="15sp"
        android:textColor="@color/black"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:text="一卡在手，逛店无忧"
            android:textSize="15sp"
            />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="70dp"
        android:src="@drawable/right_arrow_icon"/></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:text="我的专享特权"
            android:textColor="@color/black"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:text="领金币，看优惠"
            android:textSize="15sp"
            />
    </LinearLayout>
</LinearLayout>
